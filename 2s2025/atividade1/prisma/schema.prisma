generator client {
  provider = "prisma-client-js"

}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Pessoa {
  idPessoa Int @id @default(autoincrement())
  nome String
  email String @unique
  carros PessoaPorCarro[]
  telefones Telefone[]

  @@map("pessoa")
}

model Carro {
  idCarro Int @id @default(autoincrement())
  modelo String
  marca String
  ano Int
  pessoas PessoaPorCarro[]

  @@map("carro")
}

model Telefone {
  telefoneId Int @id @default(autoincrement())
  pessoaId Int
  numero String
  pessoa Pessoa @relation(fields: [pessoaId], references: [idPessoa])

  @@map("telefone")
}

model PessoaPorCarro {
  id Int @id @default(autoincrement())
  pessoaId Int
  carroId Int

  pessoa Pessoa @relation(fields: [pessoaId], references:[idPessoa])
  carro Carro @relation(fields: [carroId], references:[idCarro])

  @@unique([pessoaId,carroId])

  @@map("pessoa_por_carro")
}